# Frontend Configuration

# Google Gemini Pro API Configuration (REQUIRED)
# Get your API key from: https://aistudio.google.com/app/apikey
REACT_APP_GEMINI_API_KEY=your-gemini-key

# Backend API URL
REACT_APP_API_URL=http://localhost:5000

# Google OAuth Configuration (REQUIRED for Google Sign-In)
# Get your client ID from: https://console.developers.google.com/
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# TMDB API Configuration (OPTIONAL - for future use)
# Get your API key from: https://www.themoviedb.org/settings/api
REACT_APP_TMDB_API_KEY=your_tmdb_api_key_here

# Environment
REACT_APP_NODE_ENV=development

# External API URLs
REACT_APP_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent
REACT_APP_TMDB_API_URL=https://api.themoviedb.org/3

# Feature Flags
REACT_APP_ENABLE_GOOGLE_AUTH=true
REACT_APP_ENABLE_MOVIE_INSIGHTS=true
REACT_APP_ENABLE_PAYMENTS=false

# Debug Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Performance Configuration
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_SERVICE_WORKER=false

# Microservices URLs (if using microservices)
REACT_APP_API_GATEWAY_URL=http://localhost:3001
REACT_APP_AUTH_SERVICE_URL=http://localhost:3002
REACT_APP_MOVIE_SERVICE_URL=http://localhost:3003
